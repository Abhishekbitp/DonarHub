<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.prince.savelife.FindBlood"
    android:background="#FFC0CB">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarfind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/textViewfind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Blood"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="25sp"
        android:layout_below="@+id/toolbarfind"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/toolbarfind"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <TextView
            android:id="@+id/nameviewfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="\nFULL NAME"
            android:textColor="#8b0000"
            android:textSize="25sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/nameeditfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter your name"
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/cityviewfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="\nCITY"
            android:textColor="#8b0000"
            android:textSize="25sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/cityeditfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="Enter your city name"
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/dloodviewfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:text="\nBLOOD GROUP"
            android:textColor="#8b0000"
            android:textSize="25sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/bloodeditfind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="sans-serif-condensed"
            android:hint="What Blood Group Blood you need"
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="italic" />
    </LinearLayout>

    <Button
        android:id="@+id/findbutton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="FIND BLOOD"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:textAlignment="center"
        android:background="#8b0000"
        android:textSize="22sp"
        android:fontFamily="sans-serif-condensed"/>

</RelativeLayout>
